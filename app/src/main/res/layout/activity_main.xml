<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Phần nền màu xanh với sóng -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bg_wave"
        android:gravity="center"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz App"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Lưới 4 nút (2x2) -->
    <GridLayout
        android:layout_below="@id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="24dp"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Nút Tính Diện Tích -->
        <LinearLayout
            android:id="@+id/btn_cpp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_shadow"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cpp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tính Diện Tích"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Nút Vật Liệu -->
        <LinearLayout
            android:id="@+id/btn_java"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_shadow"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_java" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vật Liệu"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Nút Công Trình -->
        <LinearLayout
            android:id="@+id/btn_python"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_shadow"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_python" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công Trình"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Nút Giới Thiệu -->
        <LinearLayout
            android:id="@+id/btn_kotlin"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_shadow"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_kotlin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
